rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow all authenticated users to read dialects and lessons
    match /dialects/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // For seeding data
    }
    
    match /lessons/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // For seeding data
    }
    
    // Allow authenticated users to manage their own progress
    match /user_progress/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && 
        (request.resource.data.userId == request.auth.uid || 
         (resource != null && resource.data.userId == request.auth.uid));
    }
    
    // Allow authenticated users to manage their own achievements
    match /user_achievements/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && 
        (request.resource.data.userId == request.auth.uid || 
         (resource != null && resource.data.userId == request.auth.uid));
    }
  }
}
